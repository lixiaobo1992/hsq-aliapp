  font-size: 28rpx;
}
.c-ctdw-arrow{
  position: absolute;
  right: 0;
  top: 0;
  width: 60rpx;
  height: 100rpx;
  background: inherit;
  z-index: 1;
}
.c-ctdw-arrow:before{
  content: "";
  position: absolute;
  right: -30rpx;
  top: 50rpx;
  width: 100%;
  height: 100%;
  transform: rotate(30deg);
  transform-origin: right top;
  background: inherit;
  z-index: 1;
}
.c-ctdw-arrow:after{
  content: "";
  position: absolute;
  right: -30rpx;
  top: -50rpx;
  width: 100%;
  height: 100%;
  transform: rotate(-30deg);
  transform-origin: right bottom;
  background: inherit;
  z-index: 1;
}
