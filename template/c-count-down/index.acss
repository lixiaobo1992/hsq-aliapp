.c-count-down{
  border-radius: 50rpx;
  overflow: hidden;
}
.c-ctdw-inner{
  display: flex;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
}
.c-ctdw-item{
  position: relative;
  flex: 1;
  font-size: 24rpx;
  box-sizing: border-box;
}
