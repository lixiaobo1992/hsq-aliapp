.c-ctdw-textbox{
  position: absolute;
  left: 25rpx;
  right: 0;
  top: 20rpx;
  bottom: 20rpx;
  color: #ffffff;
  text-align: center;
  line-height: 32rpx;
  z-index: 10;
  overflow: hidden;
}
.c-ctdw-textline{
  text-align: center;
  line-height: 32rpx;
}
.c-ctdw-textline view{
  display: inline-block;
  white-space: nowrap;
  padding: 0 16rpx;
  border-radius: 16rpx;
}
.c-ctdw-textactive{
  top: 16rpx;
  bottom: 16rpx;
}
.c-ctdw-active{
  background-image: linear-gradient(90deg, #F14268, #F25F1B);
}
.c-ctdw-textactive view{
  line-height: 34rpx;
  overflow: hidden;
}
